/* pages/meeting/meetingDetail/meetingDetail.wxss */
@import "../../news/newDetail/newDetail.wxss";

.new-content .new-title{
  margin-top: 15rpx;
}
.new-content .meeting-info{
  padding: 10rpx 0;
}
.new-content .meeting-hold{
  color: #ACB6BC;
  font-size: 24rpx;
  min-height: 45rpx;
  display: flex;
  align-items: center;
}
.new-content .meeting-hold image{
  max-width: 30rpx;
  max-height: 30rpx;
  margin-right: 20rpx;
}
.new-content .meeting-ticket{
  margin-top: 20rpx;
  height: 45rpx;
  display: flex;
  align-items: center;
}
.new-content .meeting-ticket >view{
  color: #ACB6BC;
  font-size: 24rpx;
  margin-right: 30rpx;
}
.new-content .meeting-ticket .black{
  color: #16253D;
}
.new-content .meeting-ticket .red{
  color: #F04848;
}
.new-content .new-h2{
  margin: 30rpx 0 20rpx;
  font-size: 28rpx;
  color: #16253D;
}
.new-content .new-text image{
  width: 24rpx;
  height: 25rpx;
  margin-right: 19rpx;
  display: inline-block;
}

.enroll-button{
  width: 500rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 34rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  text-align: center;
}
.ing{
  background-color: #F04848;
}
.end{
  background-color: #C9C9C9;
}

.container >view.car_banner{
  width: 100%;
  position: relative;
}
swiper{
  width: 100%;
  height: 260rpx;
}
.swiper-item-images{
  width: 100%;
  height: 260rpx;
}